{
    "manifest_version": 3,
    "name": "Smart Distraction Tracker",
    "version": "1.1",
    "description": "Track time spent on websites and get notfied  when reaching daily limit.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": ["storage", "tabs","notifications"],
    "host_permissions": ["http://*/", "https://*/"]
}
